@using Microsoft.AspNet.Identity;
@model ChatApp.Models.ChangePasswordViewModel
@{
    ViewBag.Title = "Đổi mật khẩu";

    ChatApp.Models.ChatAppEntities db = new ChatApp.Models.ChatAppEntities();
    var currentUserId = User.Identity.GetUserId();
    var user = db.AspNetUsers.Find(currentUserId);
    var userName = user.UserName;
}

<main aria-labelledby="title">
    @using (Html.BeginForm("ChangePassword", "Manage", FormMethod.Post, new { role = "form" }))
    {
        @Html.AntiForgeryToken()
        <hr />
        @Html.ValidationSummary("", new { @class = "text-danger" })
        <div class="form-group">
            <label class="col-form-label">Tài khoản</label>
            <input class="form-control" data-val="true" type="text" disabled value="@userName">
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.OldPassword, "Mật khẩu cũ", new { @class = "col-form-label" })
            @Html.PasswordFor(m => m.OldPassword, new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.NewPassword, "Mật khẩu mới", new { @class = "col-form-label" })
            @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.ConfirmPassword, "Nhập lại mật khẩu mới", new { @class = "col-form-label" })
            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
        </div>
        <input type="submit" value="Cập nhật" class="btn btn-primary" />
    }
</main>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}