@model ChatApp.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_common.cshtml";
}

<div class="wrapper" style="margin-top: 10px;">
    <div class="text-center mt-4 name mb-3">
        <img src="~/Content/images/engcenter.png" alt="logo" style="max-width: 100%;">
    </div>
    <div style="height: 10px;">
    </div>
    @using (Html.BeginForm("Register", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "mt-3 mb-3", role = "form" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger text-center" })
        <div class="form-field d-flex align-items-center">
            <span class="far fa-user"></span>
            @Html.TextBoxFor(m => m.FullName, new { @placeholder = "Tên đầy đủ" })
        </div>
        <div class="form-field d-flex align-items-center">
            <span class="far fa-user"></span>
            @Html.TextBoxFor(m => m.PhoneNumber, new { @placeholder = "Số điện thoại" })
        </div>
        <div class="form-field d-flex align-items-center">
            <span class="far fa-user"></span>
            @Html.TextBoxFor(m => m.Email, new { @placeholder = "Tên đăng nhập" })
        </div>
        <div class="form-field d-flex align-items-center">
            <span class="fas fa-key"></span>
            @Html.PasswordFor(m => m.Password, new { @placeholder = "Mật khẩu" })
        </div>
        <div class="form-field d-flex align-items-center">
            <span class="fas fa-key"></span>
            @Html.PasswordFor(m => m.ConfirmPassword, new { @placeholder = "Nhập lại mật khẩu" })
        </div>
        <button class="btn mt-3">Đăng ký</button>
    }
    <div class="text-center fs-6">
        Bạn đã có tài khoản <a href="/Account/Login">Đăng nhập ngay</a>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
